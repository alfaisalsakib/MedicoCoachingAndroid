<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".model.AdmissionInfo"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/medicoAdm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:background="#aaaaaa91"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admission Fee : "
                android:textSize="20dp"
                android:textAllCaps="true"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/medicoFee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textAllCaps="true"
                android:textStyle="bold"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Date  : "
                android:textSize="20dp"
                android:textAllCaps="true"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/medicoLastDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 12-06-18"
                android:textSize="20dp"
                android:textAllCaps="true"
                android:textStyle="bold"/>

        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/medicalAdm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:background="#aaaaaa91"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Form Fee : "
                android:textSize="20dp"
                android:textAllCaps="true"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/medicalFee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 500"
                android:textSize="20dp"
                android:textAllCaps="true"
                android:textStyle="bold"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Date  : "
                android:textSize="20dp"
                android:textAllCaps="true"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/medicalLastDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 12-08-18"
                android:textSize="20dp"
                android:textAllCaps="true"
                android:textStyle="bold"/>

        </TableRow>

    </TableLayout>

</LinearLayout>